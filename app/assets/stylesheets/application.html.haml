!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Shoppe
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    / Latest compiled and minified CSS
    %link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :integrity => "sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", :rel => "stylesheet"}/
    / Optional theme
    %link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css", :integrity => "sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r", :rel => "stylesheet"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
  %body
    %header{class: "container"}
      %h1{class: "text-center header-font"} BeNice Horse Breeders
      %a{href:"/"} Homepage
      .dropdown
        %button.dropbtn Dropdown
        .dropdown-content
          -@categories.each do |category|
            %a{:href => "/categories/#{category.id}"}
              ="#{category.name}"
      - if logged_in?
        -if is_admin?
          =link_to("Admin Page", { controller: "admin", action: "index" })
        %a{href:"/sessions/logout"}
          ='logout'

      - else
        %a{href:"/sessions/new"}
          ='login'
        %a{href:"/users/new"}
          ='register'
    %section{class: "container-fluid"}
      = yield
